{
  "name": "@pefish/app-name",
  "version": "0.0.1",
  "description": "app-description",
  "author": "pefish <pefish@qq.com>",
  "dependencies": {
    "@pefish/js-logger": "^1.0.5",
    "@pefish/js-starter": "^1.0.0"
  },
  "appName": "app-name",
  "bin": {
    "app-name": "app.js"
  },
  "scripts": {
    "build": "rm -rf lib && tsc && npm run tslint",
    "start": "ts-node src/start.ts",
    "test": "mocha --timeout 20000 --exit --require ts-node/register src/**/*.test.ts",
    "t": "mocha --timeout 20000 --exit --require ts-node/register",
    "docker": "docker build -t app-name .",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "prepare": "npm run test && npm run build",
    "prepublish": "check-node-version --npm \">=4\" || npm run prepare"
  },
  "devDependencies": {
    "@types/chai": "^5.0.1",
    "@types/mocha": "^10.0.9",
    "@types/node": "^22.9.0",
    "check-node-version": "^4.2.1",
    "mocha": "^10.8.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "tslint": "^6.1.3"
  }
}
