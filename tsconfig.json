{
  "compilerOptions": {
    "allowJs": false,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2020",
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "lib",
    "baseUrl": ".",
    "lib": ["es2015", "es2016", "es2017", "es2018", "es2020", "DOM"],
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types", "node_modules/@pefish"],
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*"]
}
